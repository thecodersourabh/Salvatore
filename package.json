  "scripts": {
    "dev": "set VITE_WEB_BUILD=true && vite build && vite preview",
    "web": "set VITE_WEB_BUILD=true && vite build && vite preview",
    "prebuild": "npm install --force --save-dev --silent || echo 'Platform dependency handled'",
    "build": "vite build",
    "build:web": "set VITE_WEB_BUILD=true && vite build",
    "build:android": "npm run build && npx cap sync && npx cap open android",
    "build:ci": "npm ci && vite build",
    "clean:deps": "rm -rf node_modules package-lock.json",
    "sync": "npx cap sync",
    "android": "npx cap open android",
    "lint": "eslint .",
    "run": "vite build && vite preview"
  },
  "dependencies": {
    "@auth0/auth0-react": "^2.4.0",
